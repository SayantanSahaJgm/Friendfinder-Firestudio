/**
 * @file Firebase Security Rules for FriendFinder App
 *
 * @description This ruleset enforces a user-centric security model with a focus on data ownership and controlled sharing.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user profiles. Each user can only read/write their own profile.
 * - `/posts/{postId}`: Stores posts from all users. Posts are publicly readable but only the owner can modify or delete them.
 * - `/posts/{postId}/likes/{likeId}`: Stores likes for each post.
 * - `/posts/{postId}/comments/{commentId}`: Stores comments for each post.
 * - `/stories/{storyId}`: Stores user stories, which are publicly readable, but only the owner can modify or delete them.
 * - `/friendRequests/{requestId}`: Stores friend requests between users.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profiles.
 * - Posts and Stories are publicly readable, but only the author can modify or delete them. This relies on denormalizing the `userId` into the post/story document.
 * - Listing of users is not allowed.
 * - Friend Requests can be read and written by the involved users.
 *
 * Denormalization for Authorization:
 * - The `Post` and `Story` entities include a `userId` field to enable owner-only write access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) User A can create their own profile: `request.auth.uid == 'user_a' && request.resource.data.id == 'user_a'`
     * @allow (get,update,delete) User A can read their own profile: `request.auth.uid == 'user_a' && resource.data.id == 'user_a'`
     * @deny (create) User A cannot create a profile for User B: `request.auth.uid == 'user_a' && request.resource.data.id == 'user_b'`
     * @deny (get,update,delete) User A cannot read User B's profile: `request.auth.uid == 'user_a' && resource.data.id == 'user_b'`
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data.id == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to posts.
     * @path /posts/{postId}
     * @allow (get,list) Anyone can read posts.
     * @allow (create) User A can create a post: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_a'`
     * @allow (update,delete) User A can update/delete their own post: `request.auth.uid == 'user_a' && resource.data.userId == 'user_a'`
     * @deny (create) User A cannot create a post for User B: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_b'`
     * @deny (update,delete) User A cannot update/delete User B's post: `request.auth.uid == 'user_a' && resource.data.userId == 'user_b'`
     * @principle Allows public read access, enforces ownership for writes.
     */
    match /posts/{postId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isPostOwner() {
          return resource.data.userId == request.auth.uid;
      }

      function isExistingPostOwner() {
        return isSignedIn() && resource.data.userId == request.auth.uid;
      }

      allow get, list: if true;

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isPostOwner();
      allow delete: if isSignedIn() && isPostOwner();
    }

    /**
     * @description Controls access to likes for a specific post.
     * @path /posts/{postId}/likes/{likeId}
     * @allow (get,list) Anyone can read likes.
     * @allow (create) User A can like a post: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_a'`
     * @allow (update,delete) No updates or deletes are allowed.
     * @deny (create) User A cannot like a post for User B: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_b'`
     * @principle Allows public read access, enforces ownership for writes.
     */
    match /posts/{postId}/likes/{likeId} {
       function isOwner(userId) {
        return request.auth.uid == userId;
      }
        function isLikeOwner() {
            return resource.data.userId == request.auth.uid;
        }

      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to comments for a specific post.
     * @path /posts/{postId}/comments/{commentId}
     * @allow (get,list) Anyone can read comments.
     * @allow (create) User A can comment on a post: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_a'`
     * @allow (update,delete) No updates or deletes are allowed.
     * @deny (create) User A cannot comment on a post for User B: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_b'`
     * @principle Allows public read access, enforces ownership for writes.
     */
    match /posts/{postId}/comments/{commentId} {
        function isOwner(userId) {
            return request.auth.uid == userId;
        }

        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description Controls access to stories.
     * @path /stories/{storyId}
     * @allow (get,list) Anyone can read stories.
     * @allow (create) User A can create a story: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_a'`
     * @allow (update,delete) User A can update/delete their own story: `request.auth.uid == 'user_a' && resource.data.userId == 'user_a'`
     * @deny (create) User A cannot create a story for User B: `request.auth.uid == 'user_a' && request.resource.data.userId == 'user_b'`
     * @deny (update,delete) User A cannot update/delete User B's story: `request.auth.uid == 'user_a' && resource.data.userId == 'user_b'`
     * @principle Allows public read access, enforces ownership for writes.
     */
    match /stories/{storyId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isStoryOwner() {
          return resource.data.userId == request.auth.uid;
      }
      function isExistingStoryOwner() {
        return isSignedIn() && resource.data.userId == request.auth.uid;
      }

      allow get, list: if true;

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isStoryOwner();
      allow delete: if isSignedIn() && isStoryOwner();
    }

      /**
       * @description Controls access to friend requests.
       * @path /friendRequests/{requestId}
       * @allow (get) User A or B can get the friend request where they are the sender or receiver.
       * @allow (create) User A can create a friend request where they are the sender.
       * @allow (update) User A or B can update the friend request where they are the sender or receiver.
       * @allow (delete) User A can delete a friend request where they are the sender.
       * @deny (create) User A cannot create a friend request where they are not the sender.
       *
       */
      match /friendRequests/{requestId} {
          function isOwner(userId) {
              return request.auth.uid == userId;
          }

          function isRelatedUser(userIdA, userIdB) {
            return request.auth.uid == userIdA || request.auth.uid == userIdB;
          }

          function isExistingRelatedUser() {
            return isSignedIn() && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
          }

          allow get: if isExistingRelatedUser();
          allow list: if false;

          allow create: if isSignedIn() && request.resource.data.from == request.auth.uid;
          allow update: if isExistingRelatedUser();
          allow delete: if isSignedIn() && resource.data.from == request.auth.uid;
      }

    function isSignedIn() {
      return request.auth != null;
    }
  }
}